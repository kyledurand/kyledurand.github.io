{
  "extends": "astro/tsconfigs/base",
  "compilerOptions": {
    "target": "ES5",
    "verbatimModuleSyntax": true,
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "plugins": [
      {
        "names": ["@astrojs/ts-plugin", "typescript-lit-html-plugin"],
        "tags": ["html", "template"]
      }
    ]
  }
}
