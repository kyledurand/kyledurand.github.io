---
import "../styles/global.css";
import Nav from "./Nav.astro";
import { Parachute } from "./Parachute";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/x-icon" href="/favicon.png" />
    <meta name="color-scheme" content="dark" />
  </head>

  <body>
    <div class="nav">
      <Nav />
      <Parachute client:visible />
    </div>

    <main>
      <slot />
    </main>

    <style>
      body {
        display: grid;
        grid-template-columns: var(--logo-width) calc(100% - var(--logo-width));
      }

      main {
        display: flex;
        position: relative;
        height: 100dvh;
        width: 100%;
      }

      .nav {
        border-inline-end: 0.125px solid var(--highlight);
      }

      nav {
        padding-top: 94px;
        max-width: 300px;
      }

      ul {
        display: flex;
        flex-direction: column;
        gap: var(--space-2);
        list-style: none;
        padding: 0;
      }

      li {
        margin: var(--space-1) 0;
      }
    </style>
  </body>
</html>
